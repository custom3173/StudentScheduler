gem 'mysql2'

gem 'therubyracer'

gem 'sass-rails'
gem 'coffee-rails'
gem 'uglifier'
gem 'slim-rails'
gem 'simple_form'
gem 'turbolinks'
gem 'jquery-turbolinks'
