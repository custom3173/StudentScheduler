<h3>
  <%= "<span class=\"#{schedule.group}\">#{schedule.group.humanize}</span>".html_safe %>
  <%= "<span> &middot #{schedule.description}</span>".html_safe unless schedule.description.blank? %>
</h3>
<div class="accordion-field">
  <div class="schedule-effective-days"><span>On Days: </span><%=schedule.days_of_week %></div>

  <div class="schedule-times">
    <div><span><%= schedule.absent? ? 'Absent From: ' : 'Shift Begins: ' %></span><%= schedule.start_time.strftime "%-I:%M %p" %></div>
    <div><span><%= schedule.absent? ? 'Absent Until: ' : 'Shift Ends: ' %></span><%= schedule.end_time.strftime "%-I:%M %p" %></div>
  </div>

  <div class="schedule-dates">
    <div><span>Start Date: </span><%= schedule.start_date.strftime "%-m-%-d-%Y" %></div>
    <div><span>End Date: </span><%= schedule.end_date.strftime "%-m-%-d-%Y" %></div>
  </div>

  <div class="schedule-links">
    <%= link_to 'Edit', edit_student_schedule_path(@student, schedule),
      class: 'button' %>
    <%= link_to 'Delete', student_schedule_path(@student, schedule),
      method: :delete, data: { confirm: 'Permanently delete this schedule?' },
      class: 'button' %>
  </div>
</div>