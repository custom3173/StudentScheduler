<h1>Call Out Tomorrow</h1>

<p class="notice">
  This form will automatically create an 'absent' schedule for tomorrow and send email notifications. You only need to fill out the description field.
</p>

<%= form_for([@student, @schedule], url: {action: :mark_tomorrow_absent}) do |f| %>
    <% if @schedule.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

          <ul>
            <% @schedule.errors.full_messages.each do |msg| %>
                <div class="field"><%= msg %></div>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field" id="description">
      <%= f.label :description %><br />
      <%= f.text_area :description, :size => '60x5' %>
    </div>

    <div class="actions">
      <%= f.submit 'Call Out' %>
    </div>
<% end %>